---
import BaseHead from "../components/BaseHead.astro";
import GridSkills from "../components/GridSkills.astro";
import WindowBox from "../components/WindowBox.astro";

import dataSkills from "../data/skills.json";

import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

const skillsTextFirstColumn = [dataSkills.tecnicas, dataSkills.estrategicas];

const skillsTextSecondColumn = [dataSkills.analiticas, dataSkills.soft];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <section class="hero">
        <div class="container">
          <p class="hero-sub-title text-pixel">
            UX/UI Designer | Product Designer
          </p>
          <h1 class="hero-title">
            Olá! Sou a <span>Camila</span>, e transformo ideias em <br /><span
              >experiências</span
            > intuitivas e impactantes.
          </h1>
        </div>
      </section>
      <section class="skills section-container section-grid-bg">
        <div class="container">
          <h2 class="section-title text-pixel">Habilidades</h2>
          <GridSkills>
            <div class="skills-group">
              {
                skillsTextFirstColumn.map((skill) => {
                  return (
                    <WindowBox title={skill.title}>
                      <ul>
                        {skill.items.map((item) => {
                          return (
                            <li>
                              <strong>{item.strong}</strong>
                              {item.text}
                            </li>
                          );
                        })}
                      </ul>
                    </WindowBox>
                  );
                })
              }
            </div>
            <div class="skills-group">
              {
                skillsTextSecondColumn.map((skill) => {
                  return (
                    <WindowBox title={skill.title}>
                      <ul>
                        {skill.items.map((item) => {
                          return (
                            <li>
                              <strong>{item.strong}</strong>
                              {item.text}
                            </li>
                          );
                        })}
                      </ul>
                    </WindowBox>
                  );
                })
              }
            </div>
            <div class="skills-group">
              <WindowBox title={dataSkills.ferramentas.title}>
                <ul class="skills-tools">
                  {
                    dataSkills.ferramentas.tools.map((item) => {
                      return (
                        <li>
                          <img src={`/camilaalves/svg/logo-${item}.svg`} />
                        </li>
                      );
                    })
                  }
                </ul>
              </WindowBox>
              <WindowBox title={dataSkills.idiomas.title}>
                <ul class="skills-languages">
                  {
                    dataSkills.idiomas.languages.map((item) => {
                      return (
                        <li>
                          <img
                            src={`/camilaalves/images/flag-${item.flag}.webp`}
                          />
                          {item.text}
                        </li>
                      );
                    })
                  }
                </ul>
              </WindowBox>
            </div>
          </GridSkills>
        </div>
      </section>
    </main>
  </body>
</html>

<style>
  .hero {
    padding-block: 32px;
    text-align: center;

    @container main-container (width >= 1024px) {
      padding-block: 136px;
    }

    br {
      display: none;

      @container main-container (width >= 1024px) {
        display: initial;
      }
    }
  }

  .hero-title {
    font-weight: 700;
    font-size: 1.75rem;
    text-shadow: #ffffff25 1px 0 10px;

    @container main-container (width >= 1024px) {
      font-size: 3rem;
    }

    span {
      color: var(--color-dark-secondary-100);
    }
  }

  .hero-sub-title {
    font-weight: 500;
    font-size: 1rem;
    text-shadow: #ffffff25 1px 0 10px;

    @container main-container (width >= 1024px) {
      font-size: 1.25rem;
    }

    &:not(:last-child) {
      margin-block-end: 24px;
    }
  }

  .section-container {
    padding-block: 80px;

    @container main-container (width >= 1024px) {
      padding-block: 120px;
    }
  }

  .section-title {
    font-size: 1.75rem;
    font-weight: 300;
    color: var(--_section-title-color, var(--color-white));

    @container main-container (width >= 1024px) {
      font-size: 3.25rem;
    }

    &:not(:last-child) {
      margin-block-end: 40px;

      @container main-container (width >= 1024px) {
        margin-block-end: 52px;
      }
    }
  }

  .skills {
    --_bg-line-color: var(--color-dark-line-2);
    --_section-title-color: var(--color-dark-primary-100);

    background-color: var(--color-dark-secondary-100);

    ul:not(.skills-tools):not(.skills-languages) {
      padding-inline-start: 24px;
    }
  }

  .skills-group {
    > * {
      &:not(:last-child) {
        margin-block-end: 24px;

        @container main-container (width >= 1024px) {
          margin-block-end: 12px;
        }
      }
    }
  }

  .skills-languages {
    li {
      display: flex;
      align-items: center;
      gap: 8px;

      &:not(:last-child) {
        margin-block-end: 16px;
      }

      img {
        min-width: 24px;
        max-width: 24px;
        height: 16px;
      }
    }
  }

  .skills-tools {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    gap: 22px;
    padding-inline-start: 0;

    img {
      display: block;
      width: 32px;
      height: 32px;
    }
  }
</style>
